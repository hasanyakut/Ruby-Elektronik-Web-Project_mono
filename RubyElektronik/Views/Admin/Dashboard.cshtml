@{
    ViewData["Title"] = "Ruby Elektronik - Admin Dashboard";
}

<div class="row mb-4 admin-container">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-5 fw-bold">
                    <i class="fas fa-tachometer-alt me-3"></i>Admin Dashboard
                </h1>
                <p class="lead text-muted">Ruby Elektronik yönetim paneli</p>
            </div>
            <div class="text-end">
                <div class="mb-2">
                    <span class="badge bg-success">
                        <i class="fas fa-user me-1"></i>@ViewBag.AdminUsername
                    </span>
                </div>
                <a href="/admin/logout" class="btn btn-outline-danger btn-sm">
                    <i class="fas fa-sign-out-alt me-1"></i>Çıkış Yap
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title mb-0">@ViewBag.ProductCount</h3>
                        <p class="card-text">Toplam Ürün</p>
                    </div>
                    <div class="fs-1">
                        <i class="fas fa-box"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title mb-0">@ViewBag.OrderCount</h3>
                        <p class="card-text">Toplam Sipariş</p>
                    </div>
                    <div class="fs-1">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="card-title mb-0">@ViewBag.UserCount</h3>
                        <p class="card-text">Toplam Kullanıcı</p>
                    </div>
                    <div class="fs-1">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-box me-2"></i>Ürün Yönetimi
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Ürün ekleme, düzenleme ve silme işlemleri</p>
                <div class="d-grid gap-2">
                    <a href="/admin/products" class="btn btn-primary">
                        <i class="fas fa-list me-2"></i>Ürünleri Görüntüle
                    </a>
                    <a href="/admin/products/create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Yeni Ürün Ekle
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-shopping-bag me-2"></i>Sipariş Yönetimi
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Sipariş takibi ve yönetimi</p>
                <div class="d-grid gap-2">
                    <a href="/admin/orders" class="btn btn-primary">
                        <i class="fas fa-list me-2"></i>Siparişleri Görüntüle
                    </a>
                    <a href="/admin/orders/create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Yeni Sipariş Ekle
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-users me-2"></i>Kullanıcı Yönetimi
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Kullanıcı hesapları yönetimi</p>
                <div class="d-grid gap-2">
                    <a href="/admin/users" class="btn btn-primary">
                        <i class="fas fa-list me-2"></i>Kullanıcıları Görüntüle
                    </a>
                    <a href="/admin/users/create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Yeni Kullanıcı Ekle
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-home me-2"></i>Site Yönetimi
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Ana site yönetimi</p>
                <div class="d-grid gap-2">
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-eye me-2"></i>Siteyi Görüntüle
                    </a>
                    <a href="/admin/servicerecords" class="btn btn-primary">
                        <i class="fas fa-tools me-2"></i>Servis Kayıtları Yönetimi
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-clock me-2"></i>Son Aktiviteler
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Hoş geldiniz! Ruby Elektronik admin panelinde sistem yönetimi yapabilirsiniz.
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Sistem başarıyla çalışıyor
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Tüm servisler aktif
                    </li>
                    <li class="list-group-item">
                        <i class="fas fa-check-circle text-success me-2"></i>
                        Admin paneli hazır
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div> 