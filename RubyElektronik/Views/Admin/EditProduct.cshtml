@model RubyElektronik.Models.Product
@{
    ViewData["Title"] = "Ruby Elektronik - Ürün Düzenle";
}

<div class="row mb-4 admin-container">
    <div class="col-12">
        <h1 class="display-5 fw-bold">
            <i class="fas fa-edit me-3"></i>Ürün Düzenle
        </h1>
        <p class="lead text-muted">Ürün bilgilerini güncelleyin</p>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-box me-2"></i>Ürün Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-tag me-1"></i>Ürün Adı
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Ürün adını girin" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">
                            <i class="fas fa-money-bill me-1"></i>Fiyat
                        </label>
                        <div class="input-group">
                            <input asp-for="Price" class="form-control" placeholder="0.00" type="number" step="0.01" min="0" />
                            <span class="input-group-text">₺</span>
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            <i class="fas fa-image me-1"></i>Ürün Resmi
                        </label>
                        <input type="file" name="imageFile" accept="image/*" class="form-control" />
                        @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
                        {
                            <div class="mt-2">
                                <img src="@Model.ImagePath" alt="Ürün resmi" style="max-height: 150px; border-radius: 8px;" />
                                <div class="form-text">Yeni bir resim yüklerseniz mevcut resim değiştirilecektir.</div>
                            </div>
                        }
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/admin/products" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left me-1"></i>Geri Dön
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 