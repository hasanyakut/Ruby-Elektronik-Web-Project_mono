@model List<RubyElektronik.Models.ServiceRecord>
@{
    ViewData["Title"] = "Servis Kayıtları Yönetimi";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4 admin-container">
                <h2><i class="fas fa-tools me-2"></i>Servis Kayıtları Yönetimi</h2>
                <div>
                    <a href="/admin/servicerecords/pdf/all" class="btn btn-danger me-2">
                        <i class="fas fa-file-pdf me-2"></i>Tümünü PDF İndir
                    </a>
                    <a href="/admin/dashboard" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Dashboard'a Dön
                    </a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Aktif Servis Kayıtları -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>Aktif Servis Kayıtları
                        <span class="badge bg-light text-primary ms-2">@Model.Count(s => s.IsActive)</span>
                    </h5>
                </div>
                <div class="card-body">
                    @{
                        var activeRecords = Model.Where(s => s.IsActive).ToList();
                    }
                    @if (activeRecords.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-primary">
                                    <tr>
                                        <th>#</th>
                                        <th>Ad Soyad</th>
                                        <th>Kullanıcı Tipi</th>
                                        <th>Firma Adı</th>
                                        <th>Telefon</th>
                                        <th>Ürün Türü</th>
                                        <th>Arıza Açıklaması</th>
                                        <th>Kayıt Tarihi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kayit in activeRecords)
                                    {
                                        <tr>
                                            <td>@kayit.Id</td>
                                            <td>@kayit.Ad @kayit.Soyad</td>
                                            <td>
                                                @if (kayit.UserType == RubyElektronik.Models.ServiceUserType.Corporate)
                                                {
                                                    <span class="badge bg-primary">Kurumsal</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Bireysel</span>
                                                }
                                            </td>
                                            <td>@(kayit.FirmaAdi ?? "-")</td>
                                            <td>@kayit.TelefonNumarasi</td>
                                            <td>@kayit.UrunTuru</td>
                                            <td style="white-space: normal;">
                                                <div style="max-width: none; overflow-wrap: anywhere;">
                                                    @kayit.ArizaAciklamasi
                                                </div>
                                            </td>
                                            <td>@kayit.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/admin/servicerecords/pdf/@kayit.Id" 
                                                       class="btn btn-danger btn-sm me-1"
                                                       title="PDF İndir">
                                                        <i class="fas fa-file-pdf"></i>
                                                    </a>
                                                    <a href="/admin/servicerecords/complete/@kayit.Id" 
                                                       class="btn btn-success btn-sm me-1"
                                                       onclick="return confirm('Bu servis kaydını tamamlandı olarak işaretlemek istediğinizden emin misiniz?')">
                                                        <i class="fas fa-check me-1"></i>Tamamlandı
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Aktif servis kaydı bulunmamaktadır.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Tamamlanan Servis Kayıtları -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-check-circle me-2"></i>Tamamlanan Servis Kayıtları
                        <span class="badge bg-light text-success ms-2">@Model.Count(s => !s.IsActive)</span>
                    </h5>
                </div>
                <div class="card-body">
                    @{
                        var completedRecords = Model.Where(s => !s.IsActive).ToList();
                    }
                    @if (completedRecords.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-success">
                                    <tr>
                                        <th>#</th>
                                        <th>Ad Soyad</th>
                                        <th>Kullanıcı Tipi</th>
                                        <th>Firma Adı</th>
                                        <th>Telefon</th>
                                        <th>Ürün Türü</th>
                                        <th>Arıza Açıklaması</th>
                                        <th>Kayıt Tarihi</th>
                                        <th>Tamamlanma Tarihi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kayit in completedRecords)
                                    {
                                        <tr class="table-light">
                                            <td>@kayit.Id</td>
                                            <td>@kayit.Ad @kayit.Soyad</td>
                                            <td>
                                                @if (kayit.UserType == RubyElektronik.Models.ServiceUserType.Corporate)
                                                {
                                                    <span class="badge bg-primary">Kurumsal</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Bireysel</span>
                                                }
                                            </td>
                                            <td>@(kayit.FirmaAdi ?? "-")</td>
                                            <td>@kayit.TelefonNumarasi</td>
                                            <td>@kayit.UrunTuru</td>
                                            <td style="white-space: normal;">
                                                <div style="max-width: none; overflow-wrap: anywhere;">
                                                    @kayit.ArizaAciklamasi
                                                </div>
                                            </td>
                                            <td>@kayit.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>@(kayit.UpdatedAt?.ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                                            <td>
                                                <div class="d-flex flex-column gap-2">
                                                    <div class="btn-group" role="group">
                                                        <a href="/admin/servicerecords/pdf/@kayit.Id" 
                                                           class="btn btn-danger btn-sm me-1"
                                                           title="PDF İndir">
                                                            <i class="fas fa-file-pdf"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-outline-primary btn-sm me-1" data-bs-toggle="modal" data-bs-target="#completionModal"
                                                                data-id="@kayit.Id"
                                                                data-desc="@kayit.CompletionDescription"
                                                                data-price="@(kayit.CompletionPrice?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "")">
                                                            <i class="fas fa-pen me-1"></i>Açıklama/Fiyat
                                                        </button>
                                                        <a href="/admin/servicerecords/delete/@kayit.Id" 
                                                           class="btn btn-outline-danger btn-sm"
                                                           title="Tamamen Sil"
                                                           onclick="return confirm('Bu servis kaydını TAMAMEN SİLMEK istediğinizden emin misiniz? Bu işlem geri alınamaz ve kayıt veritabanından tamamen silinecektir!')">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                    @if (!string.IsNullOrWhiteSpace(kayit.CompletionDescription) || kayit.CompletionPrice.HasValue)
                                                    {
                                                        <div class="border rounded p-2 bg-white">
                                                            @if (!string.IsNullOrWhiteSpace(kayit.CompletionDescription))
                                                            {
                                                                <div><strong>Açıklama:</strong> @kayit.CompletionDescription</div>
                                                            }
                                                            @if (kayit.CompletionPrice.HasValue)
                                                            {
                                                                <div><strong>Fiyat:</strong> @kayit.CompletionPrice.Value.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("tr-TR"))</div>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Tamamlanan servis kaydı bulunmamaktadır.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Shared Completion Modal (placed once at end to avoid table nesting issues) -->
<div class="modal fade" id="completionModal" tabindex="-1" aria-labelledby="completionModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="completionModalLabel">Tamamlama Bilgileri</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="completionForm" method="post">
          <div class="modal-body">
              <div class="mb-3">
                  <label class="form-label">Açıklama (isteğe bağlı)</label>
                  <textarea id="completionDescriptionInput" name="completionDescription" class="form-control" rows="4" maxlength="1000"></textarea>
              </div>
              <div class="mb-3">
                  <label class="form-label">Fiyat (isteğe bağlı)</label>
                  <input id="completionPriceInput" type="number" step="0.01" min="0" class="form-control" name="completionPrice" />
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            <button type="submit" class="btn btn-primary">Kaydet</button>
          </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var completionModal = document.getElementById('completionModal');
            var descriptionInput = document.getElementById('completionDescriptionInput');
            var priceInput = document.getElementById('completionPriceInput');
            var form = document.getElementById('completionForm');

            completionModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var id = button.getAttribute('data-id');
                var desc = button.getAttribute('data-desc') || '';
                var price = button.getAttribute('data-price') || '';

                descriptionInput.value = desc;
                priceInput.value = price;
                form.action = '/admin/servicerecords/update-completion/' + id;

                var title = completionModal.querySelector('.modal-title');
                if (title) {
                    title.textContent = 'Tamamlama Bilgileri (#' + id + ')';
                }
            });
        });
    </script>
}
