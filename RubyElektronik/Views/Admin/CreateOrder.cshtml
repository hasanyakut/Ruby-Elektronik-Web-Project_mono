@model RubyElektronik.Models.Order
@{
    ViewData["Title"] = "Ruby Elektronik - Yeni Sipariş";
}

<div class="row mb-4 admin-container">
    <div class="col-12">
        <h1 class="display-5 fw-bold">
            <i class="fas fa-plus me-3"></i>Yeni Sipariş Ekle
        </h1>
        <p class="lead text-muted">Sisteme yeni sipariş ekleyin</p>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-shopping-bag me-2"></i>Sipariş Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateOrder" method="post">
                    <div class="mb-3">
                        <label asp-for="ProductName" class="form-label">
                            <i class="fas fa-box me-1"></i>Ürün Adı
                        </label>
                        <input asp-for="ProductName" class="form-control" placeholder="Ürün adını girin" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label">
                            <i class="fas fa-hashtag me-1"></i>Miktar
                        </label>
                        <input asp-for="Quantity" class="form-control" placeholder="1" type="number" min="1" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/admin/orders" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left me-1"></i>Geri Dön
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Siparişi Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 