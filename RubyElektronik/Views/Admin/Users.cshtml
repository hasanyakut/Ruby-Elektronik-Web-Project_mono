@model List<RubyElektronik.Models.User>
@{
    ViewData["Title"] = "Ruby Elektronik - Kullanıcı Yönetimi";
}

<!-- Alert Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-4 admin-container">
    <div class="col-md-8">
        <h1 class="display-5 fw-bold">
            <i class="fas fa-users me-3"></i>Kullanıcı Yönetimi
        </h1>
        <p class="lead text-muted">Sistemdeki tüm kullanıcıları görüntüleyin ve yönetin</p>
    </div>
    <div class="col-md-4 text-end d-flex align-items-center justify-content-end">
        <a href="/admin/users/create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>Yeni Kullanıcı Ekle
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Kullanıcı Listesi
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th width="40%">Kullanıcı Adı</th>
                            <th width="40%">E-posta</th>
                            <th width="15%" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="fw-bold">@user.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-info rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@user.Name</div>
                                            <small class="text-muted">Kullanıcı ID: @user.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">@user.Email</span>
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-outline-danger btn-sm" 
                                            onclick="confirmDelete(@user.Id, '@user.Name')" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted">
            <div class="row">
                <div class="col-md-6">
                    <small>Toplam @Model.Count kullanıcı bulundu</small>
                </div>
                <div class="col-md-6 text-end">
                    <small>Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</small>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <div class="mb-4">
                <i class="fas fa-users fa-4x text-muted"></i>
            </div>
            <h4 class="text-muted mb-3">Henüz kullanıcı bulunmuyor</h4>
            <p class="text-muted mb-4">İlk kullanıcınızı ekleyerek başlayın</p>
            <a href="/admin/users/create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>İlk Kullanıcıyı Ekle
            </a>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Kullanıcı Silme Onayı
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong id="userName"></strong> adlı kullanıcıyı silmek istediğinizden emin misiniz?</p>
                <p class="text-muted small">Bu işlem geri alınamaz.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>İptal
                </button>
                <a href="#" id="confirmDeleteBtn" class="btn btn-danger">
                    <i class="fas fa-trash me-1"></i>Evet, Sil
                </a>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(userId, userName) {
    document.getElementById('userName').textContent = userName;
    document.getElementById('confirmDeleteBtn').href = `/admin/users/delete/${userId}`;
    
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    deleteModal.show();
}
</script> 