@model List<RubyElektronik.Models.Product>
@{
    ViewData["Title"] = "Ruby Elektronik - Ürün Yönetimi";
}

<!-- Alert Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-5 fw-bold">
            <i class="fas fa-box me-3"></i>Ürün Yönetimi
        </h1>
        <p class="lead text-muted">Sistemdeki tüm ürünleri görüntüleyin ve yönetin</p>
    </div>
    <div class="col-md-4 text-end d-flex align-items-center justify-content-end">
        <a href="/Products/Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus me-2"></i>Yeni Ürün Ekle
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Ürün Listesi
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th width="5%">#</th>
                            <th width="40%">Ürün Adı</th>
                            <th width="25%">Fiyat</th>
                            <th width="30%" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td class="fw-bold">@product.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3" style="width: 40px; height: 40px;">
                                            @if (!string.IsNullOrWhiteSpace(product.ImagePath))
                                            {
                                                <img src="@product.ImagePath" alt="@product.Name" style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%;" />
                                            }
                                            else
                                            {
                                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-box text-white"></i>
                                                </div>
                                            }
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@product.Name</div>
                                            <small class="text-muted">Ürün ID: @product.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-success fs-6">@product.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="/Products/Edit/@product.Id" class="btn btn-outline-primary btn-sm" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger btn-sm" 
                                                onclick="confirmDelete(@product.Id, '@product.Name')" title="Sil">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-muted">
            <div class="row">
                <div class="col-md-6">
                    <small>Toplam @Model.Count ürün bulundu</small>
                </div>
                <div class="col-md-6 text-end">
                    <small>Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</small>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <div class="mb-4">
                <i class="fas fa-box-open fa-4x text-muted"></i>
            </div>
            <h4 class="text-muted mb-3">Henüz ürün bulunmuyor</h4>
            <p class="text-muted mb-4">İlk ürününüzü ekleyerek başlayın</p>
            <a href="/Products/Create" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>İlk Ürünü Ekle
            </a>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>Ürün Silme Onayı
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong id="productName"></strong> adlı ürünü silmek istediğinizden emin misiniz?</p>
                <p class="text-muted small">Bu işlem geri alınamaz.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>İptal
                </button>
                <a href="#" id="confirmDeleteBtn" class="btn btn-danger">
                    <i class="fas fa-trash me-1"></i>Evet, Sil
                </a>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(productId, productName) {
    document.getElementById('productName').textContent = productName;
    document.getElementById('confirmDeleteBtn').href = `/Products/Delete/${productId}`;
    
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    deleteModal.show();
}
</script> 