@model RubyElektronik.Models.Product
@{
    ViewData["Title"] = "Ruby Elektronik - Ürün Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Ürün Düzenle
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" id="editProductForm">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-tag me-1"></i>Ürün Adı
                        </label>
                        <input asp-for="Name" class="form-control form-control-lg" 
                               placeholder="Ürün adını giriniz..." 
                               required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>Ürünün açıklayıcı adını giriniz
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Price" class="form-label">
                            <i class="fas fa-lira-sign me-1"></i>Fiyat
                        </label>
                        <div class="input-group input-group-lg">
                            <input asp-for="Price" class="form-control" 
                                   type="number" 
                                   step="0.01" 
                                   min="0" 
                                   placeholder="0.00" 
                                   required />
                            <span class="input-group-text">₺</span>
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                        <div class="form-text">
                            <i class="fas fa-info-circle me-1"></i>Ürünün satış fiyatını Türk Lirası cinsinden giriniz
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/Products" class="btn btn-outline-secondary btn-lg me-md-2">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Product Info Card -->
        <div class="card mt-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Ürün Bilgileri
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-1"><strong>Ürün ID:</strong></p>
                        <p class="text-muted">@Model.Id</p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-1"><strong>Mevcut Fiyat:</strong></p>
                        <p class="text-success fw-bold">@Model.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Warning Card -->
        <div class="card mt-4 border-warning">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Önemli Uyarı
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning mb-0">
                    <i class="fas fa-lightbulb me-2"></i>
                    <strong>Dikkat:</strong> Ürün bilgilerini değiştirdiğinizde, bu değişiklikler mevcut siparişleri etkilemeyecektir. 
                    Sadece yeni siparişler güncellenmiş fiyatları görecektir.
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('editProductForm').addEventListener('submit', function(e) {
    const name = document.getElementById('Name').value.trim();
    const price = document.getElementById('Price').value;
    
    if (!name) {
        e.preventDefault();
        alert('Lütfen ürün adını giriniz.');
        document.getElementById('Name').focus();
        return false;
    }
    
    if (!price || parseFloat(price) <= 0) {
        e.preventDefault();
        alert('Lütfen geçerli bir fiyat giriniz.');
        document.getElementById('Price').focus();
        return false;
    }
});

// Auto-format price input
document.getElementById('Price').addEventListener('input', function(e) {
    let value = e.target.value.replace(/[^\d.,]/g, '');
    value = value.replace(',', '.');
    if (value.includes('.')) {
        const parts = value.split('.');
        if (parts[1].length > 2) {
            parts[1] = parts[1].substring(0, 2);
        }
        value = parts.join('.');
    }
    e.target.value = value;
});
</script> 