@using Microsoft.AspNetCore.Http
@{
    var isAdminLoggedIn = Context.Session.GetString("AdminLoggedIn") == "true";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ruby Elektronik</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: #0f1419;
            min-height: 100vh;
            padding-bottom: 40px;
            padding-top: 120px; /* Increased padding to prevent content from being hidden behind fixed navbar */
            color: #f3f3f3;
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            position: relative;
        }
        
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 80%, rgba(220, 53, 69, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 69, 0, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 50% 50%, rgba(102, 126, 234, 0.05) 0%, transparent 50%);
            pointer-events: none;
            z-index: -1;
        }
        
        /* Modern Navbar */
        .navbar {
            background: linear-gradient(90deg, #181c22 0%, #232526 60%, #2c2f4a 100%);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            padding: 0.75rem 0;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1050; /* Increased z-index to ensure navbar stays on top */
            min-height: 100px; /* Ensure consistent navbar height */
        }
        
        .navbar-brand {
            font-size: 2rem !important;
            font-weight: 700 !important;
            color: #fff !important;
            text-transform: uppercase;
            letter-spacing: 2px;
            transition: all 0.3s ease;
            position: relative;
            background: none;
            -webkit-background-clip: initial;
            -webkit-text-fill-color: #fff;
            background-clip: initial;
            display: flex;
            align-items: center;
        }
        
        .navbar-brand img {
            height: 90px;
            width: auto;
            margin-right: 10px;
            border-radius: 8px;
            object-fit: contain;
        }
        
        .navbar-brand::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, #ff6b6b, #ffd700, #667eea);
            transition: width 0.3s ease;
        }
        
        .navbar-brand:hover::after {
            width: 100%;
        }
        
        .navbar-brand:hover {
            background: linear-gradient(90deg, #ff6b6b, #ffd700, #667eea);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            color: #ffd700 !important;
            transform: scale(1.05);
        }
        
        .navbar-nav .nav-link {
            color: #fff !important;
            font-weight: 500;
            font-size: 1.3rem;
            padding: 0.8rem 1.5rem !important;
            margin: 0 0.3rem;
            border-radius: 25px;
            transition: all 0.3s ease;
            position: relative;
        }
        
        .navbar-nav .nav-link:hover,
        .navbar-nav .nav-link.active {
            background: rgba(255,255,255,0.18);
            color: #ffd700 !important;
            transform: translateY(-2px) scale(1.04);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }
        

        
        .navbar-toggler {
            border: none;
            padding: 0.5rem;
        }
        
        .navbar-toggler:focus {
            box-shadow: none;
        }
        
        .container {
            margin-top: 0;
        }
        
        /* Additional spacing for admin pages */
        .admin-container {
            margin-top: 20px; /* Extra margin for admin pages */
        }
        
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Segoe UI', 'Arial', sans-serif;
            color: #667eea;
            letter-spacing: 1px;
            font-weight: 600;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #ff6b6b 100%);
            border: none;
            color: #fff;
            font-weight: 600;
            padding: 0.75rem 2rem;
            border-radius: 25px;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover, .btn-primary:focus {
            background: linear-gradient(135deg, #ff6b6b 0%, #667eea 100%);
            color: #fff;
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            border: none;
            color: #fff;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
            border-radius: 20px;
            transition: all 0.3s ease;
        }
        
        .btn-danger:hover, .btn-danger:focus {
            background: linear-gradient(135deg, #ee5a24 0%, #ff6b6b 100%);
            color: #fff;
            transform: translateY(-2px);
        }
        
        .btn-success {
            background: linear-gradient(135deg, #00b894 0%, #00a085 100%);
            border: none;
            color: #fff;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
            border-radius: 20px;
            transition: all 0.3s ease;
        }
        
        .btn-success:hover, .btn-success:focus {
            background: linear-gradient(135deg, #00a085 0%, #00b894 100%);
            color: #fff;
            transform: translateY(-2px);
        }
        
        table.table {
            background: rgba(255,255,255,0.05);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            color: #fff;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.1);
        }
        
        th, td {
            border-color: rgba(255,255,255,0.1) !important;
            padding: 1rem !important;
        }
        
        th {
            background: rgba(102, 126, 234, 0.2);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        a, a:visited {
            color: #667eea;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        a:hover {
            color: #ff6b6b;
            text-decoration: none;
        }
        
        .form-control, .form-select {
            background: rgba(255,255,255,0.05);
            color: #fff;
            border: 1px solid rgba(255,255,255,0.2);
            border-radius: 10px;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            background: rgba(255,255,255,0.1);
        }
        
        .form-label {
            color: #667eea;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .footer {
            background: linear-gradient(135deg, #0f1419 0%, #1a1a2e 100%);
            color: #e0e0e0;
            border-top: 1px solid rgba(255,255,255,0.1);
            padding: 2rem 0;
        }
        
        .card {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            backdrop-filter: blur(20px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 45px rgba(0, 0, 0, 0.2);
            border-color: rgba(255, 255, 255, 0.3);
        }
        
        .card-header {
            background: rgba(102, 126, 234, 0.15);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            color: #667eea;
            font-weight: 600;
            border-radius: 20px 20px 0 0;
        }
        
        .alert {
            border-radius: 10px;
            border: none;
        }
        
        .alert-success {
            background: rgba(0, 184, 148, 0.2);
            color: #00b894;
        }
        
        .alert-danger {
            background: rgba(255, 107, 107, 0.2);
            color: #ff6b6b;
        }
        
        /* Dashboard text color fixes */
        .text-muted {
            color: #e0e0e0 !important; /* Change muted text to light gray/white */
        }
        
        .card-body p {
            color: #e0e0e0 !important; /* Make paragraph text visible */
        }
        
        .lead {
            color: #e0e0e0 !important; /* Make lead text visible */
        }
        
        .list-group-item {
            background: rgba(255, 255, 255, 0.05) !important;
            color: #e0e0e0 !important;
            border-color: rgba(255, 255, 255, 0.1) !important;
        }
        
        .list-group-item:hover {
            background: rgba(255, 255, 255, 0.1) !important;
        }
        
        /* Button hover text color fixes */
        .btn:hover {
            color: #fff !important;
        }
        
        .btn-primary:hover {
            color: #fff !important;
        }
        
        .btn-success:hover {
            color: #fff !important;
        }
        
        .btn-warning:hover {
            color: #fff !important;
        }
        
        .btn-secondary:hover {
            color: #fff !important;
        }
        
        .btn-outline-primary:hover {
            color: #fff !important;
        }
        
        .btn-outline-secondary:hover {
            color: #fff !important;
        }
        
        .btn-outline-danger:hover {
            color: #fff !important;
        }
        
        /* Button normal state text color fixes */
        .btn {
            color: #fff !important;
        }
        
        .btn-primary {
            color: #fff !important;
        }
        
        .btn-success {
            color: #fff !important;
        }
        
        .btn-warning {
            color: #fff !important;
        }
        
        .btn-secondary {
            color: #fff !important;
        }
        
        .btn-outline-primary {
            color: #fff !important;
        }
        
        .btn-outline-secondary {
            color: #fff !important;
        }
        
        .btn-outline-danger {
            color: #fff !important;
        }
        
        /* Navbar Button Styling */
        .navbar-btn {
            background: linear-gradient(135deg, #667eea 0%, #ff6b6b 100%);
            border: none;
            color: #fff !important;
            font-weight: 600;
            font-size: 1.2rem;
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            margin-left: 1rem;
        }
        

        
        .navbar-btn:hover, .navbar-btn:focus {
            background: linear-gradient(135deg, #ff6b6b 0%, #667eea 100%);
            color: #fff !important;
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
            text-decoration: none;
        }
        
        /* Responsive adjustments for navbar */
        @@media (max-width: 991.98px) {
            body {
                padding-top: 140px; /* Extra padding for mobile navbar */
            }
            
            .navbar {
                min-height: 120px; /* Taller navbar on mobile */
            }
            
            .navbar-brand img {
                height: 60px; /* Smaller logo on mobile */
            }
            
            .navbar-brand {
                font-size: 1.5rem !important; /* Smaller text on mobile */
            }
        }
        
        @@media (max-width: 575.98px) {
            body {
                padding-top: 160px; /* Even more padding for very small screens */
            }
            
            .navbar {
                min-height: 140px; /* Even taller navbar on very small screens */
            }
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
