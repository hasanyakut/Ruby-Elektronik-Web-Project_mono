@model List<RubyElektronik.Models.User>
@{
    ViewData["Title"] = "Ruby Elektronik - Kullanıcı Yönetimi";
}
<h2>Kullanıcı Listesi</h2>
<a href="/Users/Create" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad Soyad / Firma</th>
            <th>E-posta</th>
            <th>Kullanıcı Tipi</th>
            <th>Firma Adı</th>
            <th>Telefon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Name</td>
            <td>@u.Email</td>
            <td>
                @if (u.UserType == RubyElektronik.Models.UserType.Corporate)
                {
                    <span class="badge badge-primary">Kurumsal</span>
                }
                else
                {
                    <span class="badge badge-secondary">Bireysel</span>
                }
            </td>
            <td>@(u.CompanyName ?? "-")</td>
            <td>@u.PhoneNumber</td>
            <td>
                <a href="/Users/Delete/@u.Id" class="btn btn-danger btn-sm" 
                   onclick="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?')">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 