@model List<RubyElektronik.Models.ServiceRecord>
@{
    ViewData["Title"] = "Servis Kayıtları";
}
<h2 class="mb-4">Servis Kayıtları</h2>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad / Firma</th>
            <th>Kullanıcı Tipi</th>
            <th>Firma Adı</th>
            <th>Telefon</th>
            <th>Ürün Türü</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Arıza Açıklaması</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kayit in Model)
        {
            <tr>
                <td>@kayit.Id</td>
                <td>@kayit.Ad @kayit.Soyad</td>
                <td>
                    @if (kayit.UserType == RubyElektronik.Models.ServiceUserType.Corporate)
                    {
                        <span class="badge badge-primary">Kurumsal</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Bireysel</span>
                    }
                </td>
                <td>@(kayit.FirmaAdi ?? "-")</td>
                <td>@kayit.TelefonNumarasi</td>
                <td>
                    @switch (kayit.UrunTuru)
                    {
                        case RubyElektronik.Models.ProductType.Televizyon:
                            <span>Televizyon</span>
                            break;
                        case RubyElektronik.Models.ProductType.Notebook:
                            <span>Notebook</span>
                            break;
                        case RubyElektronik.Models.ProductType.Bilgisayar:
                            <span>Bilgisayar</span>
                            break;
                        case RubyElektronik.Models.ProductType.Telefon:
                            <span>Telefon</span>
                            break;
                        case RubyElektronik.Models.ProductType.ElektronikKart:
                            <span>Elektronik Kart</span>
                            break;
                        case RubyElektronik.Models.ProductType.KucukEvAletleri:
                            <span>Küçük Ev Aletleri</span>
                            break;
                        default:
                            <span>@kayit.UrunTuru</span>
                            break;
                    }
                </td>
                <td>@(kayit.Marka ?? "-")</td>
                <td>@(kayit.Model ?? "-")</td>
                <td>
                    <div style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" 
                         title="@kayit.ArizaAciklamasi">
                        @kayit.ArizaAciklamasi
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table> 