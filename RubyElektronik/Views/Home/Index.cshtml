@model List<RubyElektronik.Models.Product>
@{
    ViewData["Title"] = "Ruby Elektronik - Ana Sayfa";
}

<style>
    .container {
        max-width: 1600px !important;
        padding-left: 1rem !important;
        padding-right: 1rem !important;
    }
    
    .hero-section {
        background: transparent;
        margin: 0;
        padding: 6rem 0;
        position: relative;
        overflow: hidden;
        min-height: 80vh;
        display: flex;
        align-items: center;
        width: 100%;
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 80%, rgba(220, 53, 69, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(255, 69, 0, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 50% 50%, rgba(102, 126, 234, 0.05) 0%, transparent 50%);
        opacity: 0.3;
    }
    

    
    .hero-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: white;
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 1600px;
        margin: 0 auto;
        padding: 0 1rem;
    }
    
    .hero-text {
        flex: 1;
        text-align: left;
        padding-right: 2rem;
        max-width: 700px;
    }
    
    .hero-title {
        font-size: 3.2rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.5);
        color: #ffd700;
        line-height: 1.2;
        animation: titleGlow 4s ease-in-out infinite alternate;
    }
    
    @@keyframes titleGlow {
        0% { text-shadow: 0 2px 4px rgba(0,0,0,0.5); }
        100% { text-shadow: 0 2px 4px rgba(0,0,0,0.5), 0 0 20px rgba(255, 215, 0, 0.3); }
    }
    
    .hero-subtitle {
        font-size: 1.4rem;
        opacity: 0.95;
        margin-bottom: 2rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        color: #f3f3f3;
        line-height: 1.6;
    }
    
    .hero-description {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 3rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        color: #e0e0e0;
        line-height: 1.6;
    }
    
    .hero-buttons {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
        margin-bottom: 2rem;
        align-items: flex-start;
    }
    
    .hero-device {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        max-width: 600px;
    }
    
    .device-image {
        width: 700px;
        height: 800px;
        background: transparent;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    

    
    .device-screen {
        width: 100%;
        height: 100%;
        background: transparent;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }
    
    .hero-logo {
        width: 700px;
        height: auto;
        opacity: 0.15;
        filter: brightness(1.2) contrast(1.1);
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }
    
    .hero-logo:hover {
        opacity: 0.25;
        transform: scale(1.05);
    }
    

    

    

    
    /* Services Section */
    .services-section {
        padding: 4rem 0;
        background: transparent;
    }
    
    .services-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        margin-top: 3rem;
        max-width: 1000px;
        margin-left: auto;
        margin-right: auto;
    }
    
    .service-item {
        display: flex;
        align-items: center;
        padding: 2rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }
    
    .service-item:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(102, 126, 234, 0.3);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
    }
    
    .service-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea, #ff6b6b);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1.5rem;
        flex-shrink: 0;
    }
    
    .service-icon i {
        font-size: 2rem;
        color: white;
    }
    
    .service-text h4 {
        color: #fff;
        font-size: 1.3rem;
        font-weight: 600;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }
    
    /* Mobile responsive for services */
    @@media (max-width: 768px) {
        .services-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
            max-width: 100%;
        }
        
        .service-item {
            padding: 1.5rem;
        }
        
        .service-icon {
            width: 60px;
            height: 60px;
            margin-right: 1rem;
        }
        
        .service-icon i {
            font-size: 1.5rem;
        }
        
        .service-text h4 {
            font-size: 1.1rem;
        }
    }
    
    @@media (max-width: 480px) {
        .services-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
    }
    
    /* Footer Styles */
    .footer-section {
        padding: 4rem 0 2rem 0;
        background: transparent;
        border-top: 1px solid rgba(255,255,255,0.1);
        margin-top: 4rem;
    }
    
    .footer-widget {
        margin-bottom: 2rem;
    }
    
    .footer-title {
        color: #fff;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }
    
    .footer-text {
        color: #e0e0e0;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }
    
    .social-links {
        display: flex;
        gap: 1rem;
    }
    
    .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea, #ff6b6b);
        border-radius: 50%;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    }
    
    .social-link:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        color: white;
    }
    
    .footer-links {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .footer-links li {
        margin-bottom: 0.8rem;
        color: #e0e0e0;
    }
    
    .footer-links a {
        color: #e0e0e0;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
    }
    
    .footer-links a:hover {
        color: #667eea;
        transform: translateX(5px);
    }
    
    .contact-info p {
        color: #e0e0e0;
        margin-bottom: 0.8rem;
        display: flex;
        align-items: center;
        line-height: 1.5;
    }
    
    .footer-bottom {
        border-top: 1px solid rgba(255,255,255,0.1);
        padding-top: 2rem;
        margin-top: 2rem;
    }
    
    .copyright-text {
        color: #e0e0e0;
        margin: 0;
    }
    
    .footer-bottom-links {
        display: flex;
        gap: 1.5rem;
        justify-content: flex-end;
    }
    
    .footer-link {
        color: #e0e0e0;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }
    
    .footer-link:hover {
        color: #667eea;
    }
    
    /* Mobile responsive for footer */
    @@media (max-width: 768px) {
        .footer-bottom-links {
            justify-content: center;
            margin-top: 1rem;
        }
        
        .social-links {
            justify-content: center;
        }
        
        .footer-widget {
            text-align: center;
        }
    }
    
    /* Services Slider Styles */
    .services-slider-container {
        position: relative;
        max-width: 1200px;
        margin: 0 auto;
        overflow: hidden;
        border-radius: 0;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
        padding-bottom: 1rem;
    }
    
    .services-slider {
        position: relative;
        height: 550px;
        overflow: hidden;
    }
    
    .slider-slide {
        min-width: 100%;
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(255, 107, 107, 0.1) 100%);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        opacity: 0;
        transform: translateX(100%);
        transition: all 0.5s ease-in-out;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
    
    .slider-slide.active {
        opacity: 1;
        transform: translateX(0);
        position: relative;
    }
    
    .slide-content {
        display: flex;
        align-items: center;
        width: 100%;
        padding: 3rem;
        gap: 3rem;
    }
    
    .slide-image {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .slide-image img {
        max-width: 100%;
        max-height: 800px;
        width: auto;
        height: auto;
        object-fit: contain;
        filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.3));
        transition: transform 0.3s ease;
    }
    
    .slide-image img:hover {
        transform: scale(1.05);
    }
    
    .slide-text {
        flex: 1;
        color: white;
        padding: 2rem;
    }
    
    .slide-text h3 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: #ffd700;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }
    
    .slide-text p {
        font-size: 1.2rem;
        line-height: 1.8;
        color: #e0e0e0;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        margin: 0;
    }
    
    .slider-navigation {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 100%;
        display: flex;
        justify-content: space-between;
        padding: 0 1rem;
        pointer-events: none;
        z-index: 10;
    }
    
    .slider-btn {
        background: rgba(0, 0, 0, 0.4);
        border: 2px solid rgba(255, 255, 255, 0.5);
        color: white;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        pointer-events: all;
        font-size: 1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }
    
    .slider-btn:hover {
        background: rgba(102, 126, 234, 0.8);
        border-color: rgba(102, 126, 234, 1);
        transform: scale(1.1);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
    }
    
    .slider-dots {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
    }
    
    .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .dot.active {
        background: #667eea;
        transform: scale(1.2);
        box-shadow: 0 0 20px rgba(102, 126, 234, 0.6);
    }
    
    .dot:hover {
        background: rgba(102, 126, 234, 0.7);
        transform: scale(1.1);
    }
    
    /* Mobile responsive for slider */
    @@media (max-width: 768px) {
        .slide-content {
            flex-direction: column;
            padding: 2rem;
            gap: 2rem;
            text-align: center;
        }
        
        .slide-text h3 {
            font-size: 2rem;
        }
        
        .slide-text p {
            font-size: 1rem;
        }
        
        .slide-image img {
            max-height: 500px;
        }
        
        .services-slider {
            height: auto;
            min-height: 450px;
        }
        
        .slider-navigation {
            padding: 0 1rem;
        }
        
        .slider-btn {
            width: 45px;
            height: 45px;
            font-size: 0.9rem;
        }
    }
    
    @@media (max-width: 480px) {
        .slide-content {
            padding: 1.5rem;
        }
        
        .slide-text h3 {
            font-size: 1.8rem;
        }
        
        .slide-text p {
            font-size: 0.9rem;
        }
        
        .slide-image img {
            max-height: 400px;
        }
    }
    
    .products-section {
        padding: 2rem 0;
    }
    
    .section-title {
        text-align: center;
        margin-bottom: 3rem;
        color: #667eea;
        font-size: 2.5rem;
        font-weight: 600;
    }
    
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
        padding: 0 0.5rem;
    }
    
    .product-card {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        padding: 2rem;
        transition: all 0.4s ease;
        backdrop-filter: blur(20px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }
    
    .product-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(102, 126, 234, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }
    
    .product-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 60px rgba(102, 126, 234, 0.2);
        border-color: rgba(255, 255, 255, 0.4);
    }
    
    .product-card:hover::before {
        opacity: 1;
    }
    
    .product-image {
        width: calc(100% + 4rem);
        height: 250px;
        background: linear-gradient(135deg, #667eea 0%, #ff6b6b 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: -2rem -2rem 1.5rem -2rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.2);
    }
    
    .product-image::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }
    
    .product-card:hover .product-image::before {
        left: 100%;
    }
    
    .product-icon {
        font-size: 4rem;
        color: white;
        opacity: 0.8;
    }
    
    .product-info {
        text-align: center;
        display: flex;
        flex-direction: column;
        flex: 1;
    }
    
    .product-name {
        font-size: 1.3rem;
        font-weight: 600;
        color: #fff;
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }
    
    .product-price {
        font-size: 1.8rem;
        font-weight: 700;
        color: #00b894;
        margin-bottom: 1rem;
    }

    .product-actions {
        margin-top: auto !important;
    }
    

    
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #667eea;
    }
    
    .empty-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }
    
    .empty-title {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }
    
    .empty-text {
        opacity: 0.7;
        margin-bottom: 2rem;
    }
    
    @@media (max-width: 768px) {
        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
        }
        
        .hero-content {
            flex-direction: column;
            text-align: center;
        }
        
        .hero-text {
            padding-right: 0;
            margin-bottom: 2rem;
        }
        
        .hero-title {
            font-size: 2.2rem;
        }
        
        .hero-subtitle {
            font-size: 1.1rem;
        }
        
        .hero-description {
            font-size: 1rem;
        }
        
        .section-title {
            font-size: 2rem;
        }
        
        .hero-content {
            padding: 0 0.5rem;
        }
        
        .hero-section {
            padding: 4rem 0;
            min-height: 60vh;
        }
        
        .device-image {
            width: 300px;
            height: 400px;
        }
        
        .hero-logo {
            width: 400px;
            opacity: 0.12;
        }
        

    }

    .btn.btn-primary, .btn.btn-primary:visited {
        color: #fff !important;
        transition: color 0.2s;
    }
    .btn.btn-primary:hover, .btn.btn-primary:focus {
        color: #ffd700 !important;
    }
    
    /* Floating Contact Buttons */
    .contact-float {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 1000;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }
    
    .contact-float .float-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        transition: all 0.3s ease;
        text-decoration: none;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }
    
    .contact-float .float-button:hover {
        transform: scale(1.1);
    }
    
    .contact-float .float-button i {
        color: white;
        font-size: 28px;
    }
    
    /* Email Button */
    .email-float {
        background: #007bff;
        box-shadow: 0 4px 20px rgba(0, 123, 255, 0.4);
    }
    
    .email-float:hover {
        box-shadow: 0 6px 25px rgba(0, 123, 255, 0.6);
    }
    
    /* WhatsApp Button */
    .whatsapp-float {
        background: #25d366;
        box-shadow: 0 4px 20px rgba(37, 211, 102, 0.4);
    }
    
    .whatsapp-float:hover {
        box-shadow: 0 6px 25px rgba(37, 211, 102, 0.6);
    }
    
    @@keyframes float-bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-8px);
        }
        60% {
            transform: translateY(-4px);
        }
    }
    
    /* Apply animation to both buttons */
    .email-float {
        animation: float-bounce 2s infinite 0.5s;
    }
    
    .whatsapp-float {
        animation: float-bounce 2s infinite;
    }
    
    /* Mobile responsive */
    @@media (max-width: 768px) {
        .contact-float {
            bottom: 20px;
            right: 20px;
            gap: 12px;
        }
        
        .contact-float .float-button {
            width: 55px;
            height: 55px;
        }
        
        .contact-float .float-button i {
            font-size: 24px;
        }
    }
</style>

